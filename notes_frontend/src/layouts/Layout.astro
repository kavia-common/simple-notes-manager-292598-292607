---
import ThemeToggle from '../components/ThemeToggle.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Simple Notes</title>
    <meta name="description" content="A simple local notes manager with a modern Ocean Professional UI." />
  </head>
  <body>
    <ThemeToggle />
    <slot />
  </body>
</html>

<style>
  :root {
    /* Ocean Professional - Light */
    --bg-color: #f9fafb; /* background */
    --text-color: #111827; /* text */
    --text-secondary: #6b7280;
    --border-color: rgba(17, 24, 39, 0.12);
    --card-bg: #ffffff;
    --card-hover-bg: #f8fafc;
    --shadow-color: rgba(15, 23, 42, 0.08);
    --shadow-hover-color: rgba(15, 23, 42, 0.14);

    --primary: #2563EB; /* blue */
    --secondary: #F59E0B; /* amber */
    --error: #EF4444;
    --radius: 12px;
  }

  body.dark-theme {
    /* Ocean Professional - Dark */
    --bg-color: #0f172a;
    --text-color: #f8fafc;
    --text-secondary: #cbd5e1;
    --border-color: rgba(255, 255, 255, 0.14);
    --card-bg: rgba(2, 6, 23, 0.9);
    --card-hover-bg: rgba(2, 6, 23, 0.75);
    --shadow-color: rgba(0, 0, 0, 0.45);
    --shadow-hover-color: rgba(0, 0, 0, 0.55);
  }

  html, body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: var(--bg-color);
    color: var(--text-color);
    transition: background-color 0.3s ease, color 0.3s ease;
  }

  *, *::before, *::after { box-sizing: border-box; }
  :focus-visible {
    outline: 2px solid color-mix(in oklab, var(--primary), white 10%);
    outline-offset: 2px;
    border-radius: 8px;
  }
  ::selection { background: color-mix(in oklab, var(--primary), transparent 70%); color: var(--text-color); }

  body { font-family: Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Apple Color Emoji", "Segoe UI Emoji"; }
</style>
